<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/compound_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_no_image"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/compound_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compound Name"
            android:textStyle="bold"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/compound_cid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compound CID"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/compound_mf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/compound_inpac_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IUPAC Name"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/compound_isomericSmiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="isomeric SMILES"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
